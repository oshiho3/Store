<h1>Listing products</h1>

<table class='table table-striped'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <td><%= link_to 'Show', product, :class => 'btn btn-default btn-sm' %></td>
        <td><%= link_to 'Edit', edit_product_path(product), :class => 'btn btn-default btn-sm' %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?'} , :class => 'btn btn-default btn-sm btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

